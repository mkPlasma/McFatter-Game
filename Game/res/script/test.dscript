

set dir;

set r = 60;
set c = 12;

while(true){
    
    for(i in c){
        bullet(dir + i*(360/c));
    }
    
    dir += 10;
    
    wait 25;
}

task bullet(dir){
    set b = bullet(_orb, _green, centerX(), 140, dir, 2);
    
    while(!b.isDeleted()){
        
        set pos = b.getPos();
        
        if(pos[0] < leftX() || pos[0] > rightX()){
            b.setDir(-b.getDir() + 180);
            b.setColor(_red);
            return;
        }
        if(pos[1] < topY()){
            b.setDir(-b.getDir());
            b.setColor(_red);
            return;
        }
        
        wait;
    }
}