

set dir;

set r = 60;
set c = 24;

set test = false;

while(true){
    
    for(i in c){
        bullet(dir + i*(360/c));
    }
    
    dir += 10;
    
    wait 10;
}

task bullet(dir){
    set b = bullet(_rice, _red, centerX(), 140, dir, 2);
    bullet(_rice, _blue, centerX(), 140, dir, 2);
    b.setAdditive(test);
    test = !test;
}