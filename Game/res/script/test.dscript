

set dir;

set r = 60;
set c = 16;

while(true){
    
    for(i in c){
        bullet(dir + i*(360/c));
    }
    
    dir += 10;
    
    wait 5;
}

task bullet(dir){
    set b = bullet(_scale, _red, centerX(), 140, dir, 1);
    
    wait 60;
    
    b.setAngVel(randFloat(-0.5, 0.5));
    b.setColor(_dark_red);
    
    wait 90;
    
    b.setAngVel(0);
    b.setColor(_red);
}