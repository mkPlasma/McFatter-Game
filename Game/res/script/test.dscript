

set dir;

set r = 60;
set c = 32;

set count = 0;
set type = _laser;

while(true){
    
    for(i in c){
        bullet(dir + i*(360/c), i);
    }
    
    dir += .01;
    
    count++;
    
    if(count > 90){
        count = 0;
        type++;
        
        if(type > _laser_helix){
            type = _laser;
        }
    }
    
    wait 1;
}

task bullet(dir, color){
    set b = bullet(type, color, centerX(), 140, dir, 16);
    b.setAdditive();
    
    wait 90;
    
    b.delete();
}