

set dir;

set r = 60;
set c = 8;

while(true){
    
    for(i in c){
        bullet(dir + i*(360/c), i);
    }
    
    dir += 5;
    
    wait;
}

task bullet(dir, color){
    set r = 50;
    set b = bullet(_scale, _blue, centerX() + r*cos(dir), 140 + r*sin(dir), dir, 5, 10);
    //b.setAdditive();
}