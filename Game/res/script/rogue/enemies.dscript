}


task lasers(x, y, health,spd, dir){
    set e = enemy(_fighter, x,y,health);
    set const c = 6;
    set dir2 = 90;
    e.setDir(90);
    e.setSpd(spd);
    e.setAccel(-0.05);
    e.setMinSpd(0);
    while(e.getSpd() > .01){
        wait;
    }
    while(!e.isDeleted()){
        for(d < 0, 360/c, 360){
            laserb(dir2 + d,e.getX(),e.getY());
        }
        wait 45;
        dir2 += 15.7;

    }



    task laserb(dir,x,y){
        set l = laser(_laser, _pink, x, y, dir, 700, 32, 90);
        wait 15;
        l.delete();



    }
}
