        wait 45;
        b.delete();
        for(d < 0, 360/c, 360){
            bullets2(b.getPos(), rand(0, 360)+ d);
        }


    }
    task bullets2(pos, dir2){
        set b = bullet(_scale, _purple_d, pos, dir2, 10,4,10,-.5, -15);
    }

    }





