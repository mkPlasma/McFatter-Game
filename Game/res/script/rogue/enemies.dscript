task aimbot(dir,spd,health,x,y){
    set const c = 12;
    set dir2 = 90;
    set e = enemy(_fighter,x,y, health);
    e.setDir(dir);
    e.setSpd(spd);
    e.setAccel(-.05);
    e.setMinSpd(0);
    while(!e.isDeleted()){
        for(d < 0, 360/c, 360){
            b(e.getPos(),1.5,dir2 +d);
        }
        wait 20 ;
        dir2 += 15.7;
    }

    task b(pos,spd,dir){
        set b = bullet(_scale,_pink,pos,dir,spd,-15);
        b.setMinSpd(spd);
        wait 25;
        b.setMinSpd(0);
        b.setAccel(-.3);
        wait 30;
        if(b.isDeleted()){
            return;
        }

        b.setDir(angleToPlayer(b.getPos()));
        wait 15;
        b.setMinSpd(6);



    }
}
